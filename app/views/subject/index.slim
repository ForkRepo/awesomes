=content_for :title 
  | #{@item.title} - awesomes

=content_for :keywords
  | #{@item.title},#{@item.title}专题,#{@item.title}资源

=content_for :description
  | #{@item.sdesc}

=content_for :banner
  div.sub-banner
    img.cover.blur[src="#{subject_cover_path @item.cover}"]

  css:
    body{
      background-color: #F8F8F8
    }
    .navbar{
      box-shadow: none;
    }  

=content_for :con
  div.overview
    a.normal[href="#{@item.website}" title="点击访问官网" target="_blank"]: h2 =@item.title
    p =@item.sdesc 
    /div.btn-group.navs
    /  a.btn.btn-danger[href="/subjects"]: i.fa.fa-th-list
    /  a[type="button" class="btn btn-primary"] 官网
    
  
  =cache "subject_repo_list_#{url_all_para}_#{I18n.locale}",skip_digest: true,:expires_in => 2.day do
    =render "repo_list"
  