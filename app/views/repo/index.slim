  javascript:
    var source_item = {
      id: "#{@item.id}",
      mark: "#{@item.mark}",
      using: "#{@item.using}"
    }

    var vueExtend = {
      data: {
        ismark: false,
        isusing: false,
        markcount: source_item.mark,
        usingcount: source_item.using,
        para: {
          opertyp: 'MARK',
          typ: 'REPO',
          idcd: source_item.id
        },
        usepara: {
          opertyp: 'USING',
          typ: 'REPO',
          idcd: source_item.id
        }
          
      },
      methods: {
        switch: function(la){
          this.lang = la 
        },
        initRepo: function(){
          if(Rails.islogin){
            $.post("/oper/whether", this.para, function(data){
              App.ismark =  data 
            })
            $.post("/oper/whether", this.usepara, function(data){
              App.isusing =  data 
            })
          }
        },
        markRepo: function(){
          $.post("/oper/update", this.para, function(data){
            App.ismark =  data.state
            App.markcount = data.count
            var copy = $('#like-btn').clone().css({"z-index": 20})
            if(App.ismark){
              $('#like-btn').css({"fill": "#EF4245"})
              copy.appendTo($('#like-btn').parent()).animate({
                width: 120,
                height: 120,
                opacity: 0,
                left: -45,
                top: -45
              },300, function(){ 
                copy.remove()
              })
            }else{
              copy.addClass('expand')
              copy.appendTo($('#like-btn').parent()).animate(
                {
                  width: 30,
                  height: 30,
                  opacity: 1,
                  left: 0,
                  top: 0,
                },300, 
                function(){ 
                  $('#like-btn').css({"fill": "#BBB"})
                  copy.remove()
                }  
              )
            }  
          })
        },
        usingRepo: function(){
          $.post("/oper/update", this.usepara, function(data){
            App.isusing =  data.state
            App.usingcount = data.count 
          })    
        }       
      }
    }
    
    function appInit(){
      App.initRepo()
    }